<Window x:Class="LabPong.MainPage"
        ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPage" Style="{DynamicResource window_template}" MouseMove="Canvas_MouseDown">
    <Grid>  
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" HorizontalAlignment="Center" Margin="50,0,0,0" VerticalAlignment="Center" Source="resources/images/Leapong Logo.png"/>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button Height="90" Width="350" VerticalAlignment="Top" Margin="0,30,0,0" Content="Start game" Style="{DynamicResource button_temp}" />
            <Button Height="90" Width="350" VerticalAlignment="Top" Margin="0,20,0,0" Content="High score" Style="{DynamicResource button_temp}"/>
            <Button Height="90" Width="350" VerticalAlignment="Top" Margin="0,20,0,0" Content="Options" Style="{DynamicResource button_temp}"/>
            <Button Height="90" Width="350" VerticalAlignment="Top" Margin="0,20,0,0" Content="About" Style="{DynamicResource button_temp}"/>
            <Button Height="90" Width="350" VerticalAlignment="Top" Margin="0,20,0,0" Content="Exit" Style="{DynamicResource button_temp}"/>
        </StackPanel>
        <Canvas>
            <Ellipse Style="{DynamicResource pointer_template}" Name="pointer"/>
        </Canvas>
    </Grid>
</Window>
