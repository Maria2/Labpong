<Window x:Class="LabPong.MainPage"
        ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPage" Height="350" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Source="resources/images/Leapong Logo.png"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0,30,0,0" Content="Start game" Template="{DynamicResource button_glow}"/>
            <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0,20,0,0" Content="High score"/>
            <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0,20,0,0" Content="Options"/>
            <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0,20,0,0" Content="About"/>
            <Button Height="30" Width="100" VerticalAlignment="Top" Margin="0,20,0,0" Content="Exit" />
        </StackPanel>
        <Canvas Grid.ColumnSpan="2">
            <Ellipse Style="{DynamicResource pointer_template}"/>
        </Canvas>
    </Grid>
</Window>
