<Window x:Class="LabPong.Pong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pong" Height="768" Width="1024" Style="{DynamicResource window_template}" Background="Black" Cursor="No">
    <Canvas>
        <Rectangle
            Name="Player"
            Width="15"
            Height="220"
            Stroke="White"
            StrokeThickness="15" />
        <Rectangle
            Name="Enemy"
            Width="15"
            Height="220"
            Stroke="White"
            StrokeThickness="15"
            Canvas.Right="0"/>
        <Ellipse Height="50" Fill="White" Width="50" Name="Ball" />

    </Canvas>
</Window>
