<Window x:Class="LabPong.ChooseInt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionsPage" Height="80" Width="300" WindowStyle="None" Cursor="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" BorderBrush="Black" BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBox VerticalAlignment="Center" Grid.Row="0" Text="Host IP Address?" TextAlignment="Center"/>
        <ComboBox VerticalAlignment="Center" Grid.Row="1"  HorizontalAlignment="Center" Margin="100,0,0,0" Width="100" Name="IP" Background="Black" Foreground="Red" FontSize="15" MouseEnter="Button_MouseEnter">
            <ComboBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Black" />
            </ComboBox.Resources>
        </ComboBox>
        <Button Grid.Row="1" Content="Accept" Width="100" HorizontalAlignment="Left" Name="back" FontSize="18" Foreground="Red" MouseEnter="Button_MouseEnter"/>
        <Canvas Name="canvas">
            <Ellipse Style="{DynamicResource pointer_template}" Width="30" Height="30" Name="pointer"/>
        </Canvas>
    </Grid>
</Window>
