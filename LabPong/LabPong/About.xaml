<Page x:Class="LabPong.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="About">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Source="resources/images/Leapong Logo.png" Height="137" Grid.RowSpan="2"/>
        <TextBox Grid.Row="1" Grid.Column="0" Name="aboutText" Text="This is text about the project" TextAlignment="Center" />
    </Grid>
</Page>
