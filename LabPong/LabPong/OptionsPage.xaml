<Window x:Class="LabPong.OptionsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionsPage" Height="200" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" BorderBrush="Black" BorderThickness="5">    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Username" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Width="80"/>
            <Label Content="Audio" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Width="80" HorizontalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,55,0,0" Width="100" Text="{Binding Source={StaticResource Settings}, Path=Default.Username}"/>
            <TextBox VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0" Width="100" Text="{Binding Source={StaticResource Settings}, Path=Default.Track}"/>
        </StackPanel>
    </Grid>
</Window>
