<Window x:Class="LabPong.AboutPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutPage" Style="{DynamicResource window_template}" MouseMove="Canvas_MouseMove">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image  Grid.Row="0" VerticalAlignment="Top" Source="resources/images/Leapong Logo.png" Height="137"/>
        <TextBox Grid.Row="1"  Name="aboutPageContent" TextAlignment="Center" />
        <Button MouseEnter="back_MouseEnter" Grid.Row="2" Width="100" HorizontalAlignment="Left" Name="back" FontSize="19" Content="Back" Style="{DynamicResource button_temp}"/>
        <Canvas Name="canvas">
            <Ellipse Style="{DynamicResource pointer_template}" Name="pointer"/>
        </Canvas>
    </Grid>
</Window>
